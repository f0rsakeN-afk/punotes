generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String     @id @default(cuid())
  stackID         String     @unique
  email           String     @unique
  role            Role       @default(USER)
  status          UserStatus @default(ACTIVE)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  lastSeenAt      DateTime   @default(now())
  displayName     String?
  profileImageUrl String?

  // Suspension fields
  suspendedAt     DateTime?
  suspendedUntil  DateTime?
  suspensionReason String?
  suspendedBy     String?

  // Relations
  messages        Message[]
  reactions       Reaction[]
  visits          Visit[]
  auditLogsPerformed  AuditLog[] @relation("AuditLogsPerformed")
  auditLogsReceived   AuditLog[] @relation("AuditLogsReceived")
}

model Syllabus {
  id        String   @id @default(cuid())
  branch    String
  fileSize  String
  url       String
  createdAt DateTime @default(now())
  semester  String

  @@index([branch])
}

model PYQ {
  id        String   @id @default(cuid())
  semester  String
  year      String
  branch    String
  fileSize  String
  url       String
  createdAt DateTime @default(now())

  @@index([branch])
  @@index([semester])
}

model Notes {
  id        String   @id @default(cuid())
  semester  String
  branch    String
  fileSize  String
  url       String
  subject   String
  createdAt DateTime @default(now())
  name      String

  @@index([semester])
  @@index([branch])
}

model Feedback {
  id        String   @id @default(cuid())
  email     String
  name      String
  message   String
  createdAt DateTime @default(now())
}

model Message {
  id        String     @id @default(cuid())
  content   String
  userId    String
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id])
  reactions Reaction[]

  @@index([userId])
}

model Reaction {
  id        String   @id @default(cuid())
  emoji     String
  userId    String
  messageId String
  createdAt DateTime @default(now())
  message   Message  @relation(fields: [messageId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, messageId, emoji])
  @@index([messageId])
  @@index([userId])
}

model Visit {
  id        String   @id @default(cuid())
  path      String
  referrer  String?
  userAgent String?
  ip        String   // Hashed IP
  userId    String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([path])
  @@index([userId])
  @@index([ip])
}

model AuditLog {
  id          String   @id @default(cuid())
  action      AuditAction
  performedBy String   // Admin user ID
  targetUser  String?  // User being affected
  details     Json?    // { oldRole: "USER", newRole: "ADMIN", reason: "..." }
  createdAt   DateTime @default(now())

  admin  User  @relation("AuditLogsPerformed", fields: [performedBy], references: [id])
  target User? @relation("AuditLogsReceived", fields: [targetUser], references: [id], onDelete: SetNull)

  @@index([performedBy])
  @@index([targetUser])
  @@index([createdAt])
  @@index([action])
}

model Readme {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String?
  githubPath  String?
  branch      String
  semester    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([branch])
  @@index([semester])
  @@index([slug])
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
}

enum AuditAction {
  ROLE_CHANGE
  USER_SUSPEND
  USER_UNSUSPEND
  USER_BAN
  USER_UNBAN
}
